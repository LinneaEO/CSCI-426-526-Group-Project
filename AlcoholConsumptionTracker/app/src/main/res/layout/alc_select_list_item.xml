<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/alcoholSelectImageList"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:contentDescription="@string/defaultText"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_default_drink_image"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/alcoholSelectDrinkNameList"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:clickable="false"
                    android:text="@string/defaultText"
                    android:textAlignment="center"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="155dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/alcoholSelectDrinkTypeList"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="@string/defaultText" />

                        <TextView
                            android:id="@+id/alcoholSelectDrinkServingsList"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="@string/defaultText" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="155dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/alcoholSelectDrinkPriceList"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="@string/defaultText" />

                        <TextView
                            android:id="@+id/alcoholSelectDrinkCaloriesList"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="@string/defaultText" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/alcSelectListSpacer"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="@string/defaultText"
            android:visibility="invisible" />

    </LinearLayout>

</LinearLayout>