<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:id="@+id/alc_Select"
    tools:context=".Alc_Select" >


    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-150dp"
        android:layout_marginBottom="-150dp"
        android:background="@color/color_blind_dark_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="418dp"
        android:layout_height="515dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/color_blind_light_blue"
        app:layout_constraintBottom_toBottomOf="@+id/alc_select_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/alc_select_list" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/alc_select_list"
        app:layout_constraintEnd_toEndOf="@+id/alc_select_list"
        app:layout_constraintStart_toEndOf="@+id/alc_select_list"
        app:layout_constraintStart_toStartOf="@+id/alc_select_list"
        app:layout_constraintTop_toTopOf="@+id/alc_select_list" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color_blind_light_blue"
        app:layout_constraintBottom_toBottomOf="@+id/drinkSelectTextTitle"
        app:layout_constraintEnd_toEndOf="@+id/drinkSelectTextTitle"
        app:layout_constraintStart_toStartOf="@+id/drinkSelectTextTitle"
        app:layout_constraintTop_toTopOf="@+id/drinkSelectTextTitle" />

    <Button
        android:id="@+id/alcSelectToAlcLogging"
        android:layout_width="170dp"
        android:layout_height="75dp"
        android:layout_marginBottom="10dp"
        android:background="@color/color_blind_light_blue"
        android:text="@string/confirm_choice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/alcSelectSendToAlcProgramming"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:text="Drink Mixer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/drinkSelectTextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Drink Select"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ListView
        android:id="@+id/alc_select_list"
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:layout_marginTop="60dp"
        android:choiceMode="singleChoice"
        android:divider="@color/black"
        android:dividerHeight="2dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@+id/alcSelectToAlcLogging"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drinkSelectTextTitle"></ListView>

</androidx.constraintlayout.widget.ConstraintLayout>