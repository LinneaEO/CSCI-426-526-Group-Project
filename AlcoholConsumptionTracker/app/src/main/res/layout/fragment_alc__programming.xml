<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alc_Programming"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_blind_dark_blue"
    tools:context=".Alc_Programming">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/color_blind_dark_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-150dp"
        android:layout_marginBottom="-150dp"
        android:background="@color/color_blind_dark_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/alc_programming_selected_template"
        app:layout_constraintEnd_toEndOf="@+id/alc_programming_selected_template"
        app:layout_constraintStart_toEndOf="@+id/alc_programming_selected_template"
        app:layout_constraintStart_toStartOf="@+id/alc_programming_selected_template"
        app:layout_constraintTop_toTopOf="@+id/alc_programming_selected_template" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color_blind_light_blue"
        app:layout_constraintBottom_toBottomOf="@+id/drinkSelectTextTitle"
        app:layout_constraintEnd_toEndOf="@+id/drinkSelectTextTitle"
        app:layout_constraintStart_toStartOf="@+id/drinkSelectTextTitle"
        app:layout_constraintTop_toTopOf="@+id/drinkSelectTextTitle" />

    <TextView
        android:id="@+id/drinkSelectTextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/color_blind_light_blue"
        android:text="Drink Mixer"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ListView
        android:id="@+id/alc_programming_selected_template"
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:layout_marginTop="70dp"
        android:background="@color/color_blind_dark_blue"
        android:choiceMode="singleChoice"
        android:divider="@color/black"
        android:dividerHeight="2dp"
        android:overScrollMode="never"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageButton
        android:id="@+id/alcProgrammingBackButton"
        android:layout_width="95dp"
        android:layout_height="78dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="15dp"
        android:background="@color/color_blind_dark_blue"
        android:scaleType="fitXY"
        android:scaleX="1.1"
        android:scaleY="1.1"
        android:src="@mipmap/arrow_button_not_clicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/alcProgrammingCreateDrink"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alc_programming_selected_template" />

    <ImageButton
        android:id="@+id/alcProgrammingCreateDrink"
        android:layout_width="261dp"
        android:layout_height="79dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/color_blind_dark_blue"
        android:scaleType="fitXY"
        android:scaleX="1.1"
        android:scaleY="1.1"
        android:src="@mipmap/create_button_not_clicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/alcProgrammingBackButton"
        app:layout_constraintTop_toBottomOf="@+id/alc_programming_selected_template" />

</androidx.constraintlayout.widget.ConstraintLayout>